@model Rentanime.Models.Anime
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Released Date: @Model.ReleasedDate.ToString("dddd, MMMM dd, yyyy")</li>
    <li>Date Added: @Model.DateAdded.ToString("dddd, MMMM dd, yyyy")</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

